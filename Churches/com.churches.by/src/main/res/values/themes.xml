<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlHighlight">@color/accent_color</item>

        <item name="toolbarStyle">@style/Widget.Churches.Toolbar</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Widget.Churches.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="theme">@style/ThemeOverlay.Churches.ActionBar</item>
    </style>

    <style name="ThemeOverlay.Churches.ActionBar" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/toolbar_text_color</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@color/toolbar_text_color</item>
    </style>
</resources>